user www-data;
worker_processes auto;
pid /run/nginx.pid;

events {
  worker_connections 1024;
}

http {
  sendfile off;
  tcp_nopush off;
  tcp_nodelay on;

  keepalive_timeout 65;
  types_hash_max_size 2048;

  include /etc/nginx/mime.types;
  default_type application/octet-stream;

  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_prefer_server_ciphers on;

  access_log /var/log/nginx/access.log;
  error_log /var/log/nginx/error.log;

  server {
    listen              443 ssl;
    ssl_certificate       /etc/nginx/ssl/my.imaginelearning.com.wildcard.public.bundle.crt;
    ssl_certificate_key   /etc/nginx/ssl/my.imaginelearning.com.wildcard.private.rsa;

    server_name           {{ ansible_default_ipv4.address }};
    location / {
      proxy_pass          http://{{ ansible_default_ipv4.address }}:8000;
    }
  }
}